@{
    ViewBag.Title = "Login";
}

<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
                <h1 class="text-center">Login</h1>
            </div>
            <div class="modal-body">
                <form name="signForm" role="form" ng-show="!user.authenticated">
                    <div class="form-group">

                        <input type="text" id="username" ng-model="user.UserName" class="form-control input-lg" placeholder="UserName" required />
                    </div>
                    <div class="form-group">
                        <input placeholder="Password" type="password" id="password" ng-model="user.Password" class="form-control input-lg" required />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block" ng-click="signIn()" ng-disabled="signForm.$invalid">Sign In</button>                       
                        <label class="text-center col-lg-12 col-md-12 col-xs-12 col-sm-12  alert-warning">{{responseError}}</label>
                    </div>
                </form>
            </div>
          
        </div>
    </div>
</div>