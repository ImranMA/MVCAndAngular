<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/scripts/bootstrap.js"></script>
    <script src="~/scripts/angular.js"></script>
    <script src="~/scripts/angular-animate.js"></script>
    <script src="~/Scripts/Userctl/loginApp.js"></script>
    <script src="~/Scripts/Userctl/loginController.js"></script>
    <script src="~/Scripts/Userctl/loginService.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />   
     
</head>
<body ng-app="myapp" ng-controller="SignInCtrl">
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-default navbar-fixed-top MarginBottom">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Mecca</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li ng-class="getClass('Index')"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li ng-class="getClass('About')"><a href="@Url.Action("About", "Home")">About</a></li>
                        <li ><a target="_blank" href="/UserManagementLogin_Doc.pdf">Documentation</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" ng-controller="SignInCtrl">
                        <li><button type="submit" class="btn btn-danger" ng-click="signOut()">Sign Out</button></li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
